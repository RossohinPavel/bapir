{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ESNext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
    "exclude": ["node_modules"]
}